#include <iostream>

using namespace std;

class Doadores{
    private:
    string nome;
    int telefone;
    int idade;
    
    public:
    string tipo;
    
    //Construtor
    Doadores(){
        nome = "Maria";
        telefone = 40028922;
        idade = 25;
    }
    
    //Getters & Setters
    string getTipo(){
        return this->tipo;
    }
    
    void setTipo(string t){
        this->tipo = t;
    }
    
    //MÃ©todo
    void imprimir();
};

int main()
{
    Doadores d1;
    
    d1.setTipo("O-");
    
    cout << "Doador universal:" << d1.getTipo() << endl;
    
    return 0;
}

void Doadores::imprimir(){
    cout << nome << endl;
    cout << telefone << endl;
    cout << idade << endl;
    cout << "---------" << endl;
};
